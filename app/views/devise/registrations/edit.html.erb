<div class="row justify-content-md-center">
  <div class="col-6">
    <div class="card">
      <div class="card-body">
        <h1 class="text-center">Seu Perfil</h1>
        <center><%= link_to "Voltar", root_path %></center>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group">
          <%= f.label :nome %><br />
          <%= f.text_field :nome, autofocus: true, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :login %><br />
          <%= f.text_field :login, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="form-group">
          <%= f.label :password, "Nova Senha" %> <i>(deixe em branco se não quiser alterá-la)</i><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          <% if @minimum_password_length %>
          <em><%= @minimum_password_length %> caracteres no mínimo</em>
          <% end %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, "Confirmar Senha" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :current_password, "Senha Atual" %> <i>(precisamos da sua senha atual para confirmar suas alterações)</i><br />
          <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
        </div>

        <div class="actions">
          <%= f.submit "Atualizar", class: "btn btn-success btn-block" %>
        </div>
        <% end %>
        <br>
        <hr>
        <h4 class="text-bold text-blue">Cancelar minha conta</h4>
        <p>Tem certeza que você não quer mais ficar com a gente? <%= button_to "Cancelar Conta", registration_path(resource_name), data: { confirm: "Tem certeza que deseja nos abandonar?" }, method: :delete, class: "btn btn-light " %></p> 
      </div>
    </div>
  </div>
</div>